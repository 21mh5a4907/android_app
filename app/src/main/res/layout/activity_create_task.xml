<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#8EC6EF">

    <!-- Page Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Task"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Task Title -->

    <!-- Task Description -->
    <EditText
        android:id="@+id/create_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:hint="Task Title"
        android:inputType="text"
        android:padding="16dp" />

    <EditText
        android:id="@+id/create_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Description"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:minLines="3"
        android:gravity="top"
        android:inputType="textMultiLine"/>

    <!-- Status Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/create_task_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:minHeight="48dp"
        android:padding="12dp" />

    <!-- Priority Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/create_task_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:minHeight="48dp"
        android:padding="12dp" />

    <!-- Due Date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/create_task_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Select Due Date"
        android:background="@color/white"
        android:layout_marginBottom="24dp"/>

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_task_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#D32F2F"
            android:padding="16dp"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Create Button -->
        <Button
            android:id="@+id/create_task_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#2D57B1"
            android:padding="16dp"
            android:text="Create Task"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
